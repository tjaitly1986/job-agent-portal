# ==================================
# Job Agent Portal - Environment Variables
# ==================================

# ----------------
# Authentication
# ----------------
NEXTAUTH_SECRET=                    # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000  # Your app URL

# ----------------
# Database
# ----------------
DATABASE_URL=file:./data/portal.sqlite

# ----------------
# Bright Data MCP
# ----------------
BRIGHT_DATA_API_KEY=                # Your Bright Data API token
BRIGHT_DATA_ZONE=scraping_browser   # Scraping zone (e.g., "scraping_browser")
BRIGHT_DATA_CUSTOMER_ID=            # Your Bright Data customer ID

# ----------------
# Playwright MCP
# ----------------
PLAYWRIGHT_MCP_URL=ws://localhost:3001  # Playwright MCP server URL (optional)

# ----------------
# Anthropic Claude API
# ----------------
ANTHROPIC_API_KEY=                  # Your Anthropic API key for chatbot

# ----------------
# Job Scraping Scheduler
# ----------------
CRON_SCHEDULE=0 */6 * * *           # Cron schedule (default: every 6 hours)
SCRAPING_ENABLED=true               # Enable/disable scheduled scraping
MAX_CONCURRENT_SCRAPERS=3           # Max parallel scraper instances

# ----------------
# Redis (Optional - for BullMQ)
# ----------------
# REDIS_URL=redis://localhost:6379  # Redis connection URL (falls back to in-memory)

# ----------------
# OAuth Providers (Optional)
# ----------------
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ----------------
# File Upload Limits
# ----------------
MAX_FILE_SIZE=10485760              # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,docx         # Comma-separated

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_INDEED=2                 # Requests per second
RATE_LIMIT_DICE=3
RATE_LIMIT_LINKEDIN=0.5             # 1 request per 2 seconds
RATE_LIMIT_GLASSDOOR=2
RATE_LIMIT_ZIPRECRUITER=2

# ----------------
# Development
# ----------------
NODE_ENV=development
LOG_LEVEL=info                      # debug, info, warn, error
